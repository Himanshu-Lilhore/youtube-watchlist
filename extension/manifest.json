{
  "manifest_version": 3,
  "name": "YouTube Watchlist Adder",
  "version": "1.0",
  "description": "Add YouTube videos to your watchlist with one click.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://youtube-watchlist-server.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_icon": "icon48.png"
  },
  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
  }
}
