{
  "manifest_version": 3,
  "name": "YouTube Watchlist Adder",
  "version": "1.0",
  "description": "Add YouTube videos to your watchlist with one click.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://youtube-watchlist-server.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}